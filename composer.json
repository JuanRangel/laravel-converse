{
    "name": "vsellis/laravel-converse",
    "description": "A conversation package",
    "keywords": [
        "vsellis",
        "laravel-converse"
    ],
    "homepage": "https://github.com/vsellis/laravel-converse",
    "license": "MIT",
    "authors": [
        {
            "name": "Juan",
            "email": "juan@vsellis.com",
            "homepage": "https://vsellis.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3",
        "livewire/livewire": "^1.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^9.0",
        "psalm/plugin-laravel": "^1.2",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Vsellis\\Converse\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Vsellis\\Converse\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm  --show-info=true",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Vsellis\\Converse\\ConverseServiceProvider"
            ],
            "aliases": {
                "Converse": "Vsellis\\Converse\\ConverseFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
